<?php

/**
 * Implements hook_js_alter()
 */
function custom_theme_library_versioner_js_alter(&$variables): void {
  /** @var \Drupal\custom_theme_library_versioner\CustomThemeLibraryVersionerHelper $helper */
  $helper = \Drupal::service('custom_theme_library_versioner.helper');
  $helper->setVersion($variables);
}

